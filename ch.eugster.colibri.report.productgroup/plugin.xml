<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="ch.eugster.colibri.report.productgroup.ReportProductGroupPerspective"
            id="ch.eugster.colibri.report.productgroup.perspective"
            name="Warengruppenstatistik">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="ch.eugster.colibri.report.productgroup.category"
            class="ch.eugster.colibri.report.productgroup.views.ProductGroupView"
            id="ch.eugster.colibri.report.productgroup.view"
            name="Warengruppenstatistik"
            restorable="true">
      </view>
      <category
            id="ch.eugster.colibri.report.settlement.category"
            name="Warengruppenstatistik">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:ch.eugster.colibri.report.menu.views?after=additions">
         <command
               commandId="org.eclipse.ui.views.showView"
               label="Warengruppenstatistik"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="ch.eugster.colibri.report.productgroup.view">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:ch.eugster.colibri.report.toolbar.perspectives?after=additions">
         <command
               commandId="org.eclipse.ui.perspectives.showPerspective"
               label="Warengruppenstatistik"
               mode="FORCE_TEXT"
               style="radio"
               tooltip="Zur Perspktive Warengruppenstatistik wechseln">
            <parameter
                  name="org.eclipse.ui.perspectives.showPerspective.perspectiveId"
                  value="ch.eugster.colibri.report.productgroup.perspective">
            </parameter>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu?ch.eugster.colibri.report.perspectives.menu?after=additions">
         <command
               commandId="org.eclipse.ui.perspectives.showPerspective"
               label="Warengruppenstatistik"
               style="push">
            <parameter
                  name="org.eclipse.ui.views.showView.viewId"
                  value="ch.eugster.colibri.report.productgroup.view">
            </parameter>
         </command>
      </menuContribution>
   </extension>

</plugin>
